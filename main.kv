MDFloatLayout:
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		ScrollView:
            do_scroll_x: False
            do_scroll_y: True

		    Label:
                id: word_label
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                halign: "center"
                valign: "middle"
                text: "Enter A Name"
                font_size: 32

		TextInput:
			id: word_input
			multiline: False
			size_hint: (1, .5)

		Button:
			size_hint: (1, .5)
			font_size: 32
			text: "Submit Name"
			on_press: app.submit()

		Button:
			size_hint: (1, .5)
			font_size: 32
			text: "Show Records"
			on_press: app.show_records()


